@{
	ViewData["Title"] = "checkpoint";
	Layout = "~/Views/Shared/_Layout_student.cshtml";
}

@model IEnumerable<Student_manager_mvc.Models.SinhVien> // Đảm bảo rằng bạn đã import namespace chứa model Student

<!-- CONTENT -->
<section id="content">
	<!-- NAVBAR -->
	<nav>
		<i class='bx bx-menu'></i>
		<a href="#" class="nav-link">Education - BTEC FPT</a>

		@* search *@
		<form action="#">
			<div class="form-input">
				<input type="search" placeholder="Search...">
				<button type="submit" class="search-btn"><i class='bx bx-search'></i></button>
			</div>
		</form>

		<input type="checkbox" id="switch-mode" hidden>

		<label for="switch-mode" class="switch-mode"></label>

		<!-- thong báo-->
		<a href="#" class="notification">
			<i class='bx bxs-bell'></i>
			<span class="num">8</span>
		</a>
		<a href="#" class="profile">
			<img src="~/Student_Template/img/thong.jpg">
		</a>
	</nav>
	<!-- NAVBAR -->
	<!-- MAIN -->
	<main>
		<div class="head-title">
			<div class="left">
				<h1>Home Page</h1>
				<ul class="breadcrumb">
					<li>
						<a href="#"></a>
					</li>
					<li><i class='bx bx-chevron-right'></i></li>
					<li>
						<a class="active" href="#">Home</a>
					</li>
				</ul>
			</div>
			<a href="~/Home/Dangky" class="btn-download">
				<i class='bx bxs-cloud-download'></i>
				<span class="text">Register for Re-Exam</span>
			</a>
		</div>

		<!-- cut -->
		<ul class="box-info">
			<li>
				<i class='bx bxs-calendar-check'></i>
				<span class="text">
					<h3>55</h3>
					<p> The Courses</p>
				</span>
			</li>
			<li>
				<i class='bx bxs-group'></i>
				<span class="text">
					<h3>25</h3>
					<p>Total Teacher</p>
				</span>
			</li>
			<li>
				<i class='bx bxs-dollar-circle'></i>
				<span class="text">
					<h3>$ ??? </h3>
					<p>Tuition </p>
				</span>
			</li>
		</ul>


		<div class="table-data">
			<div class="order">
				<div class="head">
					<h3></h3>
					<i class='bx bx-search'></i>
					<i class='bx bx-filter'></i>
				</div>
				<table>
					<thead>
						<tr>
							<th>Top 10 best students</th>
							<th>Address</th>
							<th>Status</th>

						</tr>
					</thead>
					<tbody>

						@{
							@if (Model != null)
							{
								int i = 1;
								foreach (var sv in Model)
								{
									<!--    ================  -->
									
									<tr>
										<td>
											@sv.FullName
										</td>
										<td>@sv.Address</td>
										<td><span class="status completed">Top @i</span></td>
									</tr>
									i++;
								}
							}
						}
						
					</tbody>
				</table>

			</div>
			<!--
			<div class="todo">
				<div class="head">
					<h3>Todos</h3>
					<i class='bx bx-plus'></i>
					<i class='bx bx-filter'></i>
				</div>

				<ul class="todo-list">
					<li class="completed">
						<p>Todo List</p>
						<i class='bx bx-dots-vertical-rounded'></i>
					</li>
				</ul>
			</div>
			-->
		</div>
	</main>
	<!-- MAIN -->
</section>
<!-- CONTENT -->

